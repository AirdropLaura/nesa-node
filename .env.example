# Nesa Node Configuration
# Copy this file to .env and modify as needed

# Node Settings
NODE_NAME=my-nesa-node
NODE_TYPE=miner
NETWORK=mainnet
MONIKER=MyNesaNode

# Wallet (optional - can be configured after setup)
# WALLET_PRIVATE_KEY=your_private_key_here
# WALLET_MNEMONIC=your_mnemonic_here

# Resource Limits
CPU_LIMIT=4
MEMORY_LIMIT=8G

# Logging
LOG_LEVEL=info

# Grafana Admin Password (only used with monitoring profile)
GRAFANA_PASSWORD=admin
